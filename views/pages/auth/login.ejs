<%- include('../../partials/head.ejs')%>
    <div class="container my-container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <br>
                <div class="card card-body" style=" border: 1px solid black; "  >
    <h5>Login to Your Account</h5>
    <form action="/auth/login" method="POST">
                    <form>
                        <br>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Email Address*</label>
                            <input type="email" class="form-control form-control <%= error.email ? "is-invalid ": '' %>" id="email" name="email"
                                aria-describedby="emailHelp" placeholder="abc123@gmail.com" >
                                <div class="invalid-feedback">
                                    <%=error.email && error.email %>
                                   </div>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="Password">Password*</label>
                            <input type="password" class="form-control form-control <%= error.password ? "is-invalid ": '' %>" name="password" id="password"
                                placeholder="***********">
                                <div class="invalid-feedback">
                                    <%=error.password && error.password %>
                                   </div>
                        </div>
                        

                        <br>
                        <button type="submit" class="btn btn-primary">Login</button>
                        
                        <a href="/auth/signup" class="my-3 my-3 text-center" style="text-decoration: none;">Don't have
                            an account? Create One</a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <a href="/auth/forgotpassword" class="my-3 my-3 text-center text-danger" style="text-decoration: none;">Forgot Password?</a>
                    </form>
                </div>
            </div>

        </div>
    </div>
    <%- include('../../partials/footer.ejs')%>

        </body>

        </html>