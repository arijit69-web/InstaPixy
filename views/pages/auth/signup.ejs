<%- include('../../partials/head.ejs')%>
  <div class="container my-container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <br>
        <div class="card card-body" style=" border: 1px solid black; ""  >
    <h5>Hi Friend! Create a New Account</h5>
    <form action=" /auth/signup" method="POST">
          <form>
            <br>
            <div class="form-group">
              <label for="username">Username*</label>
              <input type="text" class="form-control <%= error.username ? "is-invalid ": '' %>" id="username" name="username" placeholder="">
              <div class="invalid-feedback">
               <%=error.username && error.username %>
              </div>
            </div>
            
            <div class="form-group">
              <label for="exampleInputEmail1">Email Address*</label>
              <input type="email"class="form-control <%= error.email ? "is-invalid ": '' %>" id="email" name="email" aria-describedby="emailHelp"
                placeholder="abc123@gmail.com">
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
              <div class="invalid-feedback">
                <%=error.email && error.email %>
               </div>
            </div>
            
            <div class="form-group">
              <label for="Password">Password*</label>
              <input type="password" class="form-control <%= error.password ? "is-invalid ": '' %>" name="password" id="confirmPassword" placeholder="***********"
                >
                <div class="invalid-feedback">
                  <%=error.password && error.password %>
                 </div>
            </div>
            
            <div class="form-group">
              <label for="confirmPassword"> Confirm Password*</label>
              <input type="password" class="form-control <%= error.confirmPassword ? "is-invalid ": '' %>" name="confirmPassword" id="confirmPassword"
                placeholder="***********" >
                <div class="invalid-feedback">
                  <%=error.confirmPassword && error.confirmPassword %>
                 </div>
            </div>
            
            <button type="submit" class="btn btn-primary">Sign Up</button>
            <a href="/auth/login" style="text-decoration: none; " class="my-3 text-center">Already have an Account?
              Login Here</a>

          </form>
        </div>
      </div>

    </div>
  </div>
  <%- include('../../partials/footer.ejs')%>

    </body>

    </html>